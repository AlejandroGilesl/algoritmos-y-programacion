#include <iostream>
#include <conio.h>
#include <math.h>
using namespace std;
int digitos(int nro)
{
	int dig=0;
	while (nro>0)
	{
		nro=nro/10;
		dig++;
	}
	return (dig);
}
int sumatoriadigitos (int nro)
{
	int s=0,dig;
	while (nro>0)
	{
		dig=nro%10;
		nro=nro/10;
		s=s+dig;
	}
	return (s);
}
int suma (int nro)
{
	int s,mayor,a,dig=0, aux;
	aux=nro;
	while (aux>0)
	{
		aux=aux/10;
		dig++;
	}
	aux=nro;
	mayor = aux / powl (10, (dig-1));
	s=s+mayor;
	for (int i=2;i<=dig;i++)
	{
		a= aux / powl ( 10, dig-i);
		a=a%10;
		if (a>mayor)
		{
			mayor=a;
			s=s+a;
		}
		else
		{
			s=s;
		}
		nro=nro/10;
	}
	return (s);
}
int invertir (int n)
{
	int s=0,d;
	do
	{
		d=n%10;
		s=s*10+d;
		n=n/10;
	} while (n>0);
	return (s);
}
bool primo (int n)
{
	bool k=true;
	for (int i=2;i<n;i++)
	{
		if (n%i==0)
		{
				k=false;
		}
			
	}
	return (k);
}
int sumaPrimo (int n)
{
	bool k;
	int s=0,dig;
	do
	{
		dig=n%10;
		n=n/10;
		k=primo(dig);
		if (k==true)
		{
			s=s+dig;
		}
		else
		{
			s=s;
		}
	} while(n>0);
	return (s);
}
int sumaPrimo1 (int n)
{
	bool k;
	int s=0,dig;
	do
	{
		dig=n%10;
		n=n/10;
		k=primo(dig);
		if (k==false)
		{
			s=s*10+dig;
		}
		else
		{
			s=s;
		}
	} while(n>0);
	s=invertir(s);
	return (s);
}
int combinatoria (int n, int n1)
{
	int newnro,dig=0,aux=n1;
	do
	{
		n1=n1/10;
		dig++;
	}while(n1>0);
	n=n*powl(10,dig);
	newnro=n+aux;
	return (newnro);
}
